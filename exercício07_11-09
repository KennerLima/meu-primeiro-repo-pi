<head>
    <title>Processo Seletivo</title>
   
</head>
<body>
    <h1>Avaliação de Aprovação</h1>
    Nota do ENEM:
    <input type="number"id="input_enem"><br>

    Nota do Vestibular Interno:
    <input type="number" id="input_vestibular"><br>

    <button onclick="avaliarExibirAprovacao()">Avaliação</button>
</body>
</html>
 <script>
        function avaliarExibirAprovacao() {
            const notaEnem = Number(input_enem.value)
            const notaVestibular = Number(input.vestibular.value)

            if (notaEnem >= 800 || notaVestibular >= 700) {
                alert("Parabéns! Aprovado");
            } else {
                alert("Tente semestre que vem!");
            }
        }
    </script>