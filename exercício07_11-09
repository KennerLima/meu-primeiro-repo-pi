<!DOCTYPE html>
<html>
<head>
    <title>Processo Seletivo</title>
    <script>
        function avaliarAprovacao() {
            let notaEnem = parseFloat(document.getElementById("enem").value);
            let notaVestibular = parseFloat(document.getElementById("vestibular").value);

            if (notaEnem >= 800 || notaVestibular >= 700) {
                alert("Parabéns! Aprovado");
            } else {
                alert("Tente semestre que vem!");
            }
        }
    </script>
</head>
<body>
    <h1>Avaliação de Aprovação</h1>
    <label for="enem">Nota do ENEM:</label>
    <input type="number" id="enem"><br><br>

    <label for="vestibular">Nota do Vestibular Interno:</label>
    <input type="number" id="vestibular"><br><br>

    <button onclick="avaliarAprovacao()">Avaliação</button>
</body>
</html>
